<p class="notice"> <%= notice %></p>

<h2>Action Officer</h2>

<div>
  <strong>Name:</strong>
  <%= @action_officer.name_with_div %>

</div>
<div>
  <strong>Email:</strong>
  <%= @action_officer.email %>
</div>
<div>
  <strong>Phone:</strong>
  <%= @action_officer.phone %>
</div>
<div>
  <strong>Deputy director:</strong>
  <%= @action_officer.deputy_director.name %>
</div>
<div>
  <strong>Division:</strong>
  <%= @action_officer.deputy_director.division.name %>
</div>
<div>  <% if @action_officer.deleted %>
      <i class="fa fa-times"></i>Inactive
  <% else %>
      <i class="fa fa-check-circle"></i>Active
  <% end %>
</div>

<%= link_to 'Edit', edit_action_officer_path(@action_officer), {class: 'button'}  %>

<%= link_to 'Back', action_officers_path , {class: 'button'}  %>
