<div id="admin-ao-form">
  <%= form_for @action_officer do |f| %>
    <% if @action_officer.errors.any? %>
      <div class="info-notice">
        <h3><%= pluralize(@action_officer.errors.count, "error") %> prohibited this Action Officer from being saved:</h3>
        <ul>
          <% @action_officer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <label for="" class="form-label">Name</label>
      <%= f.text_field :name, {class: 'form-control'} %>
      <label for="" class="form-label">Email</label>
      <%= f.text_field :email , {class: 'form-control'} %>
      <label for="" class="form-label">Group email</label>
      <%= f.text_field :group_email , {class: 'form-control'} %>
      <label for="" class="form-label">Phone</label>
      <%= f.text_field :phone , {class: 'form-control'} %>
      <label for="" class="form-label">Deputy Director</label>
      <%= f.collection_select(:deputy_director_id, @deputy_directors, :id, :name, :include_blank => "Please select") %>
      <label for="" class="form-label">Press Desk</label>
      <%= f.collection_select(:press_desk_id, @press_desks, :id, :name, :include_blank => "Please select") %>
      <p>
        Status:
        <label><%= f.check_box :deleted %>&nbsp;Inactive</label>
      </p>
      <%= f.submit 'Save', {class: 'button'} %>
    </div>
  <% end %>
</div>
