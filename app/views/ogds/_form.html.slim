#admin-ogd-form
  = form_for(@ogd) do |f|
    = render partial: 'shared/errors', object: @ogd
    fieldset
      .form-group
        label.form-label for="ogd_name"  Name (required)
        = f.text_field :name, {class: 'form-control'}
      .form-group
        label.form-label for="ogd_acronym"  Acronym (required)
        = f.text_field :acronym, {class: 'form-control'}
      .form-group
        p Status
        label.block-label for="ogd_deleted"
          = f.check_box :deleted
          | Inactive
      .form-group
        = f.submit 'Save', :id => 'save', :class => 'button'
