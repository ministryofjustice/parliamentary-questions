<%= form_for(@press_officer) do |f| %>
  <% if @press_officer.errors.any? %>
    <div class="alert alert-danger">
    <!-- <div id="error_explanation"> -->
      <p><strong><%= pluralize(@press_officer.errors.count, "error") %> prohibited this press_officer from being saved:</strong></p>
      <ul>
        <% @press_officer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- <div class="field"> -->
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, {class: 'form-control'} %>
  </div>
  <!-- <div class="field"> -->
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, {class: 'form-control'} %>
  </div>
  <!-- <div class="field"> -->
  <div class="form-group">
    <%= f.label :press_desk_id %>
    <%= f.collection_select(:press_desk_id, @press_offices, :id, :name, :include_blank => "Please select") %>
  </div>
  <div class="form-group">
    <div class="checkbox">
      <label><%= f.check_box :deleted %>&nbsp;Inactive</label>
    </div>
  </div>
  <div class="actions"><%= f.submit 'Save', {class: 'btn btn-success'} %></div>
<% end %>
