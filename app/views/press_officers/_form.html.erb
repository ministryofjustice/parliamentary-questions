<div id="admin-po-form">
  <%= form_for(@press_officer) do |f| %>
    <% if @press_officer.errors.any? %>
      <div class="info-notice">
        <h3><%= pluralize(@press_officer.errors.count, "error") %> prohibited this press_officer from being saved:</h3>
        <ul>
          <% @press_officer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <fieldset>
      <div class="form-group">
        <label for="press_officer_name" class="form-label">Name</label>
        <%= f.text_field :name, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <label for="press_officer_email" class="form-label">Email</label>
        <%= f.text_field :email, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <label for="press_officer_press_desk_id" class="form-label">Press Desk</label>
        <%= f.collection_select(:press_desk_id, @press_offices, :id, :name, :include_blank => "Please select") %>
      </div>
      <div class="form-group">
        <p class="text">Status</p>
        <label for="press_officer_deleted" class="block-label">
          <%= f.check_box :deleted %>Inactive
        </label>
      </div>
      <div class="form-group">
        <%= f.submit 'Save', {class: 'button'} %>
      </div>
    </fieldset>
  <% end %>
</div>
