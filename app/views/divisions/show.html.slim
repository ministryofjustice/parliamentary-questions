#admin-division-details
  h1 Division details
  = render partial: "shared/flash_messages", flash: flash
  h2 Name
  p= @division.name
  h2 Directorate
  p= @division.directorate.name
  h2 Status
  = render partial: 'shared/status', object: @division
  p
    = link_to 'Edit', edit_division_path(@division), {class: 'admin-link'}
    span.visually-hidden
        = ' | '
    = link_to 'Return to divisions list', divisions_path, {class: 'admin-link'}
