<h2>Listing directorates</h2>
<hr />
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Active/Inactive</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @directorates.each do |directorate| %>
      <tr>
        <td><%= link_to "#{directorate.name}", directorate_path(directorate) %></td>
        <td>
          <% if directorate.deleted %>
            <i class="fa fa-times"></i>&nbsp;Inactive
          <% else %>
            <i class="fa fa-check-circle"></i>&nbsp;Active
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_directorate_path(directorate) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Directorate', new_directorate_path, {class: 'button'} %>
