#admin-directorates-form
  = form_for(@directorate) do |f|
    = render partial: 'shared/errors', object: @directorate
    fieldset
      .form-group
        label.form-label for="directorate_name"  Name (required)
        = f.text_field :name, {class: 'form-control'}
      .form-group
        p.govuk-body Status
        label.block-label for="directorate_deleted"
          = f.check_box :deleted
          | Inactive
      .form-group
        = f.submit 'Save', :id => 'save', :class => 'button'
