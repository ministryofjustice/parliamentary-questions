<div id="admin-directorates-form">
  <%= form_for(@directorate) do |f| %>
    <% if @directorate.errors.any? %>
      <div class="info-notice">
        <h3><%= pluralize(@directorate.errors.count, "error") %> prohibited this directorate from being saved:</h3>
        <ul>
          <% @directorate.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <fieldset>
      <div class="form-group">
        <label for="directorate_name" class="form-label">Name</label>
        <%= f.text_field :name, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <p class="text">Status</p>
        <label for="directorate_deleted" class="block-label">
          <%= f.check_box :deleted %>Inactive
        </label>
      </div>
      <div class="form-group">
        <%= f.submit 'Save' , {class: 'button'} %>
      </div>
    </fieldset>
  <% end %>
</div>
