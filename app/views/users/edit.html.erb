<h2>Editing <%= @user.email %> </h2>


<div class="row">
  <div class="col-md-6">
    <%= form_for @user do |f|   %>
        <div class="form-group">
            <%= f.label(:name, "Name") %>
            <%= f.text_field :name, {class: 'form-control'}  %>
        </div>
        <div class="form-group">
            <%= f.label(:name, "Email") %>
            <%= f.text_field :email, {class: 'form-control'} %>
        </div>

        <div class="form-group">
          <%= f.label(:roles, "Role") %>

          <%= f.select(:roles, [ User.ROLE_PQ_USER, User.ROLE_FINANCE ]) %>
        </div>

        <div class="form-group">
            <%= f.submit 'Save', {class: 'button'} %>
        </div>
    <% end %>
  </div>
</div>