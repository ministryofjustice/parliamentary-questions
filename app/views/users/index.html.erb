<%= render partial: "shared/flash_messages", flash: flash %>
<h2>Users</h2>
<div id="admin-ao-list">
  <div class="row>">
    <div id="admin-button-bar" class="col-md-2.5 pull-right">
      <%= link_to 'Invite new user', new_user_invitation_path, {class: 'button-secondary'} %>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Role</th>
        <th>Last Sign in</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to "#{user.name}", user_path(user) %></td>
          <td><%= link_to "#{user.roles}", user_path(user) %></td>
          <td>
            <% if user.current_sign_in_at.nil? %>
                never active
            <% else %>
                <%= time_ago_in_words(user.current_sign_in_at) unless user.current_sign_in_at.nil? %>
            <% end %>
          </td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="pagination-row.bottom">
    <div class="page-entries"><%= will_paginate @users %></div>
  </div>
</div>
