
<h2><%= @ao.name %>,<br/> The Parliamentary Question (<%= @question.uin %>)<br/> has been assigned to you</h2>
<br/>

<%= render partial: 'shared/flash_messages' %>

<span class="deadline">
  Deadline for completion: 
  <%= @question.internal_deadline.strftime('%d/%m/%Y %H:%M') unless @question.internal_deadline.nil? %>
<%= render partial: 'shared/deadline_time', locals: {internal_deadline: @question.internal_deadline} %>
</span>
<div style="clear:both;">
</div>
<span>Question tabled by: <%= @question.member_name %></span>
In the <%= @question.house_name %>
<!-- -->
<div class = "panel-indent" style="width= 66%;">
	<%= @question.question %>
</div>

<% if @question.action_officers_pq.first.accept %>
    <span class="label label-success">Accepted</span>
<% elsif @question.action_officers_pq.first.reject %>
    <span class="label label-primary">Rejected</span>
<% elsif @question.action_officers_pq.first.transfer %>
    <span class="label label-danger">Need to transfer</span>
<% else %>
    <span class="label label-warning">No response</span>
<% end %>




<h2>Would you accept responsibility for answering this question?</h2>

<%= link_to('accept', { action: 'index', entity: @ao.email, token: params[:token], response: 'accept'} , {class: 'btn btn-success', style: 'color:#FFFFFF'} ) %>
<%= link_to('reject', { action: 'index', entity: @ao.email, token: params[:token], response: 'reject'} , {class: 'btn btn-primary', style: 'color:#FFFFFF'} ) %>
<%= link_to('transfer', { action: 'index', entity: @ao.email, token: params[:token], response: 'transfer'} , {class: 'btn btn-danger', style: 'color:#FFFFFF'} ) %>

