#admin-deputy-form
  = form_for(@deputy_director) do |f|
    - if @deputy_director.errors.any?
      .alert.notice
        = pluralize(@deputy_director.errors.count, "error")
        | prohibited this deputy_director from being saved:
        br/
        - @deputy_director.errors.full_messages.each do |msg|
          = msg
          br/
    fieldset
      .form-group
        label.form-label for="deputy_director_name"  Name
        = f.text_field :name, {class: 'form-control'}
      .form-group
        label.form-label for="deputy_director_email"  Email
        = f.text_field :email, {class: 'form-control'}
      .form-group
        label.form-label for="deputy_director_division_id"  Division
        = f.collection_select(:division_id, @divisions, :id, :name, :include_blank => "Please select")
      .form-group
        p.text Status
        label.block-label for="deputy_director_deleted" 
          = f.check_box :deleted
          | Inactive
      .form-group
        = f.submit 'Save', :id => 'save', :class => 'button'
