<h2>Questions Allocated <%= Date.today.strftime('%d/%m/%Y') %></h2>
<h3 class="section">Allocated Today <span class="badge"><%= @questions.count %></span></h3>
<% @questions.each do |question| %>
  <h3><%= question.uin %></h4>
  <p class="text"><%= question.question %></p>
  <h4>Date For Answer</h4>
  <p class="text"><%= question.date_for_answer.strftime('%d/%m/%Y') unless question.date_for_answer.nil? %></p>
  <h4><%= question.house_name %></h4>
  <p class="text"><%= question.member_name %></p>
  <div class="allocation-info">
    <% if question.action_officers_pq.size > 0 %>
      <div class="question-allocation">
        <h4>Allocation</h4>
        <span class="question-allocation-list" data-pqid="<%= question.id %>">
          <% question.action_officers_pq.each do |ao_pq|   %>
            <% if !ao_pq.action_officer.nil? %>
              <p class="text"><%= ao_pq.action_officer.name  %>&nbsp;(<%= ao_pq.action_officer.deputy_director.division.name %>)</p>
              <% if ao_pq.accept %>
                <span class="label flag-pq-accepted">Accepted</span>
              <% elsif ao_pq.reject %>
                <span class="label flag-pq-rejected">Rejected</span>
                <a data-toggle="collapse" data-target="#rejection-<%= ao_pq.id %>-<%= ao_pq.action_officer.id %>" class="button">
                  Display Reason <span class="caret"></span>
                </a>
                <div id="rejection-<%= ao_pq.id %>-<%= ao_pq.action_officer.id %>" class="collapse">
                  <p><strong><%= ao_pq.reason_option %></strong></p>
                  <p><%= ao_pq.reason %></p>
                </div>
              <% else %>
                <span class="label flag-no-response">No response</span>
              <% end %>
            <% end %>
          <% end %>
        </span>
      </div>
    <% end %>
  </div>
  <hr />
<% end %>
