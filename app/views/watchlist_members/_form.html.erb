<div id="admin-wl-form">
    <%= form_for @watchlist_member do |f| %>
        <% if @watchlist_member.errors.any? %>
            <div class="info-notice">
                <h3><%= pluralize(@watchlist_member.errors.count, "error") %> prohibited this watchlist member from being saved:</h3>
                <ul>
                    <% @watchlist_member.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <fieldset>
            <div class="form-group">
                <label for="watchlist_member_name" class="form-label">Name</label>
                <%= f.text_field :name, {class: 'form-control'} %>
            </div>
            <div class="form-group">
                <label for="watchlist_member_email" class="form-label">Email</label>
                <%= f.text_field :email , {class: 'form-control'} %>
            </div>
            <p class="text">Status</p>
            <div class="form-group">
                <label for="watchlist_member_deleted" class="block-label">
                    <%= f.check_box :deleted %>Inactive
                </label>
            </div>
            <div class="form-group">
              <%= f.submit 'Save', :id => 'save', :class => 'button' %>
            </div>
        </fieldset>
    <% end %>
</div>
