<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @actionlist_member.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @actionlist_member.email %>
</p>

<p>
  <% if @actionlist_member.deleted %>
      <i class="fa fa-times"></i>Inactive
  <% else %>
      <i class="fa fa-check-circle"></i>Active
  <% end %>
</p>

<%= link_to 'Edit', edit_actionlist_member_path(@actionlist_member), {class: 'btn btn-info', style: 'color:#ffffff;' } %>
<%= link_to 'Back to Actionlist', actionlist_members_path, {class: 'btn btn-warning', style: 'color:#ffffff;' } %>
