<h2>Press desks</h2>
<div id="admin-pd-list">
  <div class="row>">
    <div id="admin-button-bar" class="col-md-3.5 pull-right">
      <%= link_to ('Add press desk'), new_press_desk_path, {class: 'button-secondary'} %>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Press Officers</th>
        <th id="admin-status">Status</th>
        <th></th>
      </tr>
    </thead>
    <% @press_desks.each do |press_desk| %>
      <tbody>
        <tr>
          <td><%= link_to "#{press_desk.name}", press_desk_path(press_desk) %></td>
          <td><%= press_desk.press_officers.count unless press_desk.press_officers.nil? %></td>
          <td>
            <% if press_desk.deleted %>
              <i class="fa fa-times"></i>&nbsp;Inactive
            <% else %>
              <i class="fa fa-check-circle"></i>&nbsp;Active
            <% end %>
          </td>
          <td><%= link_to 'Edit', edit_press_desk_path(press_desk) %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
