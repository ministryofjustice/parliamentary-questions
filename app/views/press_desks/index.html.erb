<h2>Listing Press Desks</h2>
<hr />
<%= link_to raw('<i class="fa fa-plus"></i> Add Press Desk'), new_press_desk_path, {class: 'btn btn-success'} %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Press officers</th>
      <th>Active/Inactive</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @press_desks.each do |press_desk| %>
      <tr>
        <td><%= link_to "#{press_desk.name}", press_desk_path(press_desk) %></td>
        <td><%= press_desk.press_officers.count unless press_desk.press_officers.nil? %></td>
        <td>
          <% if press_desk.deleted %>
            <i class="fa fa-times"></i>Inactive
          <% else %>
            <i class="fa fa-check-circle"></i>Active
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_press_desk_path(press_desk) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
