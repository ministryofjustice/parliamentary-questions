<div id="admin-pd-form">
  <%= form_for(@press_desk) do |f| %>
    <% if @press_desk.errors.any? %>
      <div class="info-notice">
        <h3><%= pluralize(@press_desk.errors.count, "error") %> prohibited this press_desk from being saved:<h3>
        <ul>
          <% @press_desk.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <fieldset>
      <div class="form-group">
        <label for="press_desk_name" class="form-label">Name</label>
        <%= f.text_field :name, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <p class="text">Status</p>
        <label for="press_desk_deleted" class="block-label">
          <%= f.check_box :deleted %>Inactive
        </label>
      </div>
      <div class="form-group">
        <%= f.submit 'Save', :id => 'save', :class => 'button' %>
      </div>
    </fieldset>
  <% end %>
</div>
