<h2>Press desk details</h2>
<div id="admin-pd-details">
	<p id="notice"><%= notice %></p>
	<h4>Name</h4>
	<p class="text"><%= @press_desk.name %></p>
	<h4>Status</h4>
	<% if @press_desk.deleted %>
		<p class="text"><i class="fa fa-times"></i>&nbsp;Inactive</p>
	<% else %>
		<p class="text"><i class="fa fa-check-circle"></i>&nbsp;Active</p>
	<% end %>
	<h3>Press officers</h3>
	<ul>
  	<% @press_desk.press_officers.each do |po|  %>
    	<li><%= link_to(po.name, { controller: 'press_officers', action: 'show', id: po.id } ) %></li>
	<% end %>
	</ul>
	<%= link_to 'Edit', edit_press_desk_path(@press_desk), {class: 'admin-link'} %>
	<%= link_to 'Return to press desk list', press_desks_path, {class: 'admin-link'} %>
</div>
