<label for="answer_submitted">Date answer submitted</label>
<div class="input-group date datetimepicker" data-date-format="DD/MM/YYYY HH:mm">
  <input id="answer_submitted" class="form-control" name="pq[answer_submitted]" type="text" value="<%= @pq.answer_submitted.strftime('%d/%m/%Y %H:%M') unless @pq.answer_submitted.nil? %>">
  <span class="input-group-addon glyphicon glyphicon-calendar"></span>
</div>

<% if !@pq.answer_submitted.nil? && !@pq.date_for_answer.nil? %>
  <% if @pq.answer_submitted < @pq.date_for_answer %>
    <p><i class="fa fa-check-circle" style="color: #5cb85c"></i>  Answer submitted on time</p>
  <% elsif @pq.answer_submitted > @pq.date_for_answer %>
    <p><i class="fa fa-thumbs-o-down"></i> Answer NOT submitted on time</p>
  <% end %>
<% end %>

<div class="checkbox">
  <%= f.label(:library_deposit) %>
  <%= f.check_box(:library_deposit) %>
</div>

<label for="pq_withdrawn">Date PQ withdrawn</label>
<div class="input-group date datetimepicker" data-date-format="DD/MM/YYYY HH:mm">
  <input id="pq_withdrawn" class="form-control" name="pq[pq_withdrawn]" type="text" value="<%= @pq.pq_withdrawn.strftime('%d/%m/%Y %H:%M') unless @pq.pq_withdrawn.nil? %>">
  <span class="input-group-addon glyphicon glyphicon-calendar"></span>
</div>

<div class="checkbox">
  <%= f.label(:holding_reply_flag) %>
  <%= f.check_box(:holding_reply_flag) %>
</div>

<% if @pq.i_will_write %>
  <p>
    <%= link_to raw("Create 'I will write' '#{@pq.uin}-IWW' <i class='fa fa-files-o'></i>"), {controller: 'i_will_write', action: 'create', id: @pq.uin}, {class: 'btn btn-success', title: 'Send a reminder email to do the draft'} %>
  </p>
<% end %>

<label>Final response information released</label>
<%= f.select(:final_response_info_released, [
  "",
  "Comercial in confidence",
  "Disproportionate cost",
  "Full disclosure",
  "Holding reply [named day PQ only]",
  "I will write",
  "Information not held centrally",
  "Information not recorded",
  "Partial disclosure",
  "Partial Disproportionate cost",
  "Referral"
]) %>

