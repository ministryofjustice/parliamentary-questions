<div id="answeringminister">
  <div class="form-group">
    <label for="sent_to_answering_minister" class="form-label">Date sent to answering minister</label>
    <span class="input-group date datetimepicker" data-date-format="DD/MM/YYYY HH:mm">
      <input id="sent_to_answering_minister" class="form-control" name="pq[sent_to_answering_minister]" type="text" value="<%= @pq.sent_to_answering_minister.strftime('%d/%m/%Y %H:%M') unless @pq.sent_to_answering_minister.nil? %>">
      <span class="input-group-addon glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <div class="form-group">
    <label for="pq_answering_minister_query" class="block-label">
      <%= f.check_box(:answering_minister_query, include_hidden: false) %>
      Answering minister query
    </label>
  </div>
  <div class="form-group">
    <label for="answering_minister_to_action_officer" class="form-label">Date sent back to action officer</label>
    <span class="input-group date datetimepicker" data-date-format="DD/MM/YYYY HH:mm">
      <input id="answering_minister_to_action_officer" class="form-control" name="pq[answering_minister_to_action_officer]" type="text" value="<%= @pq.answering_minister_to_action_officer.strftime('%d/%m/%Y %H:%M') unless @pq.answering_minister_to_action_officer.nil? %>">
      <span class="input-group-addon glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <div class="form-group">
    <label for="answering_minister_returned_by_action_officer" class="form-label">Date returned by action officer</label>
    <span class="input-group date datetimepicker" data-date-format="DD/MM/YYYY HH:mm">
      <input id="answering_minister_returned_by_action_officer" class="form-control" name="pq[answering_minister_returned_by_action_officer]" type="text" value="<%= @pq.answering_minister_returned_by_action_officer.strftime('%d/%m/%Y %H:%M') unless @pq.answering_minister_returned_by_action_officer.nil? %>">
      <span class="input-group-addon glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <div class="form-group">
    <label for="resubmitted_to_answering_minister" class="form-label">Resubmitted to minister</label>
    <span class="input-group date datetimepicker" data-date-format="DD/MM/YYYY HH:mm">
      <input id="resubmitted_to_answering_minister" class="form-control" name="pq[resubmitted_to_answering_minister]" type="text" value="<%= @pq.resubmitted_to_answering_minister.strftime('%d/%m/%Y %H:%M') unless @pq.resubmitted_to_answering_minister.nil? %>">
      <span class="input-group-addon glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <div class="form-group">
    <label for="cleared_by_answering_minister" class="form-label">Date cleared by answering minister</label>
    <span class="input-group date datetimepicker" data-date-format="DD/MM/YYYY HH:mm">
      <input id="cleared_by_answering_minister" class="form-control" name="pq[cleared_by_answering_minister]" type="text" value="<%= @pq.cleared_by_answering_minister.strftime('%d/%m/%Y %H:%M') unless @pq.cleared_by_answering_minister.nil? %>">
      <span class="input-group-addon glyphicon glyphicon-calendar"></span>
    </span>
  </div>
</div>

