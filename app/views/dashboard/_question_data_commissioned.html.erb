<div class="pq-columns row">
    <!-- start of 'sub column 1'-->
    <div class="col-md-7">
        <div class="dashboard-column1-commissioned">
            Replying minister
            <div class="row">
                <div class="col-md-6">
                    <%= link_to question.minister.name, minister_path(question.minister) %>
                </div>
                <div class="col-md-6">
                    <%= mail_to question.minister.email, raw("<i class='glyphicon glyphicon-envelope'></i> Email") %>
                </div>
            </div>

            <% if question.policy_minister %>
            Policy minister
            <div class="row">
                <div class="col-md-6">
                    <%= link_to question.policy_minister.name, minister_path(question.policy_minister) %>
                </div>
                <div class="col-md-6">
                    <% if question.policy_minister.email.blank? %>
                        No contacts set
                    <% else %>
                        <%= mail_to question.policy_minister.email, raw("<i class='glyphicon glyphicon-envelope'></i> Email") %>
                    <% end %>
                </div>
            </div>
            <% end %>

            Action officer(s)
            <div class="row">
                <%# FixMe is this even possible to happen? %>
                <% if question.ao_pq_accepted.nil? %>
                    <% question.action_officers_pq.each do |ao_pq| %>
                        <% if !ao_pq.reject && !ao_pq.action_officer.nil? %>
                            <div class="col-md-6">
                                <%= link_to ao_pq.action_officer.name, action_officer_path(ao_pq.action_officer) %>
                            </div>
                            <div class="col-md-6">
                                <%= render partial: 'shared/ao_reminder_link', locals: {ao_pq: ao_pq, question: question} %>
                            </div>
                        <% end %>
                    <% end %>
                <% else %>
                    <div class="col-md-6">
                        <%= link_to question.action_officer_accepted.name, action_officer_path(question.action_officer_accepted) %>
                    </div>
                    <div class="col-md-6">
                        <%= render partial: 'shared/ao_reminder_link', locals: {ao_pq: question.ao_pq_accepted, question: question} %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <!-- end of column 1-->

    <!--start of sub column 2 -->
    <div class="col-md-5">
        <div class="dashboard-column-2">
            <% if !question.house_name.nil? %>
                <h4><%= question.house_name %></h4>

                <p class="text"><%= question.member_name %></p>
            <% end %>

            <%# FixMe this conditional may not be neccessary as commisioned question has to have the date assigned %>
            <% if !question.date_for_answer.nil? %>
                <h4>Date for answer</h4>

                <p class="text">
                    <%= question.date_for_answer.strftime('%d/%m/%Y') %>
                    <%= render partial: 'shared/answer_time', locals: {date_for_answer: question.date_for_answer, progress_val: question.progress} %></p>
            <% end %>

            <%# FixMe this conditional may not be neccessary as commisioned question has to have the date assigned %>
            <% if !question.internal_deadline.nil? %>
                <h4>Internal deadline</h4>

                <p class="text">
                    <%= question.internal_deadline.strftime('%d/%m/%Y %H:%M') %>
                    <%= render partial: 'shared/deadline_time', locals: {internal_deadline: question.internal_deadline, progress_val: question.progress, draft_reply: question.draft_answer_received} %>
                </p>
            <% end %>

            <div id='trim_area_<%= question.id %>' class="trim_area trim_area_dashboard">
                <h4>Trim link</h4>
                <%= render partial: 'shared/trim_links', locals: {question: question} %>
            </div>
        </div>
    </div>
</div>
