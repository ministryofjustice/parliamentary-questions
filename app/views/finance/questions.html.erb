<h2>New PQ's today <span class="badge"><%= @questions.count %></span></h2>
<%= render partial: 'shared/flash_messages' %>
<% if @questions.count == 0 %>
  <p>There are not more questions to review</p>
<% end %>

<% if @questions.count > 0 %>
  <%= form_tag :controller => 'finance', :action => 'confirm' do  %>
    <ul class="questions-list col-md-12">
      <% @questions.each do |question| %>
        <li class="row">
          <div class="pq-header">
            <h3><%= question.uin %></h3>
            <% if question.question_type == 'NamedDay' %>
              <span class="label label-primary" title="Named day">N</span>
            <% end %>
            <% if question.transferred  %>
              <span class="label label-warning" title="Transferred">Transferred</span>
            <% end %>
          </div>

          <div class="pq-question">
            <%= question.question %>
          </div>

          <div class="col-md-6">
            <label>
              <input name="pq[<%= question.id %>][finance_interest]" type="checkbox" value="true"/> Register Interest
            </label>
          </div>

          <div class="col-md-6">
            <%= question.house_name %>: <%= question.member_name %><br/>
            Date For Answer: <%= question.date_for_answer.strftime('%d/%m/%Y') unless question.date_for_answer.nil? %><br/>
            <%= render partial: 'shared/question_assigned', locals: {question: question} %><br/>
            <input type="hidden" name="pq[<%= question.id %>][seen_by_finance]" value="true">
          </div>
        </li>
      <% end %>
    </ul>
    <%= submit_tag 'Confirm Visibility of all PQs' , class: 'button'%>
  <% end %>
<% end %>