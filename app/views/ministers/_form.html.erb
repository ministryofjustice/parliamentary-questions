  </div>


  <div id="members_result">

  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
    <%= f.fields_for :minister_contacts do |ff| %>
        <hr>
        <div class="field">
          <%= ff.label :name, 'Contact Description' %>
          <%= ff.text_field :name %>
        </div>
        <div class="field">
          <%= ff.label :email %>
          <%= ff.text_field :email %>
        </div>
        <div class="field">
          <%= ff.label :phone %>
          <%= ff.text_field :phone %>
        </div>
        <div class="form-group">
          <div class="checkbox">
            <label>
              <%= ff.check_box :deleted  %> Inactive
            </label>
          </div>
        </div>
    <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
