<%= form_for(@minister) do |f| %>
  <% if @minister.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@minister.errors.count, "error") %> prohibited this minister from being saved:</h2>

      <ul>
      <% @minister.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>

