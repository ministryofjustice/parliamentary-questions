<h1>Export PQ to CSV</h1>

<%= render partial: 'shared/flash_messages' %>
<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Select the range of dates to do the export</h3>
    </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <%= form_tag controller: 'export', action: 'csv' do %>
              <label for="date_from">Date From</label>
              <div class="input-group date dateonlypicker" data-date-format="DD/MM/YYYY">
                <input id="date_from" class="form-control" name="date_from" type="text" value="04/06/2014">
                <span class="input-group-addon glyphicon glyphicon-calendar"></span>
              </div>

              <label for="date_to">Date To</label>
              <div class="input-group date dateonlypicker" data-date-format="DD/MM/YYYY">
                <input id="date_to" class="form-control" name="date_to" type="text" value="<%= Date.today.strftime('%d/%m/%Y') %>">
                <span class="input-group-addon glyphicon glyphicon-calendar"></span>
              </div>


              <div class="form-group">
                <%= submit_tag 'Download CSV' , class: 'button'%>
              </div>

        <% end %>
        </div>
      </div>
    </div>
</div>
